<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="sales_invoice_view">
            <block class="Magento\Backend\Block\Widget\Button" name="sales_invoice_view_print_arabic" after="sales_invoice_view_print">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Print Arabic Invoice</argument>
                    <argument name="class" xsi:type="string">print</argument>
                    <argument name="onclick" xsi:type="string">setLocation(window.location.href.replace('view', 'print'))</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
